<h1>Search result</h1>
<p><%=link_to "Back", new_search_path %></p>
<table>
  <thead>
    <tr>
      <th width = 100>City1</th>
      <th width = 100>Date1</th>
      <th width = 100>Time1</th>
      <th width = 100>City2</th>
      <th width = 100>Date2</th>
      <th width = 100>Time2</th>
      <th width = 100>Seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% if @search.search_buses.empty? %>
<p>Нет рейсов по Вашему запросу</p>
<% else %>
<% @search.search_buses.each do |bus| %>
 <tr>
        <td><%= bus.city1 %></td>
        <td><%= bus.date1 %></td>
        <td> <%= bus.time1.strftime('%H:%M:%S') %></td>
        <td><%= bus.city2 %></td>
        <td><%= bus.date2 %></td>
        <%= bus.time2.strftime('%H:%M:%S') %>
        <td><%= bus.seats %></td>
         <td><%= link_to 'Show', bus %></td>
         
         
        
      </tr>
       <% end %>
   <% end %>

