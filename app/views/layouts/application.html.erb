<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      
    </div>
    <div id="navbar">
 <% if user_signed_in?%>
  <p class="navbar-text">Welcome, <%=current_user.email%></p>
  <%= link_to "Profile", current_user, class: 'navbar-brand' %>
  <%=link_to "Log out", destroy_user_session_path, method: :delete, class: 'navbar-brand'  %>
  <% else %>
  <%=link_to "Sign_in", new_user_session_path, class: 'navbar-brand' %>
  <% end %>
    </div>
  </div>
</nav>
 

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
